  "success": true,
  "table": [
    {
      "exit_price": 49000.0,
      "profit_loss": -1030.0,
      "profit_loss_pct": -2.06,
      "breakeven": false
    },
    {
      "exit_price": 50750.0,
      "profit_loss": 0.0,
      "profit_loss_pct": 0.0,
      "breakeven": true
    },
    ...
  ],
  "params": {
    "entry_price": 50000.0,
    ...
  }
