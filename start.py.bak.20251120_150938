#!/usr/bin/env python
# -*- coding: utf-8 -*-
"""
–°–∫—Ä–∏–ø—Ç –¥–ª—è –∑–∞–ø—É—Å–∫–∞ mTrade —Å–µ—Ä–≤–µ—Ä–∞
"""

import os
import sys
import subprocess

PID_FILE = "mtrade_server.pid"

def is_running():
    """–ü—Ä–æ–≤–µ—Ä–∏—Ç—å, –∑–∞–ø—É—â–µ–Ω –ª–∏ —Å–µ—Ä–≤–µ—Ä"""
    if not os.path.exists(PID_FILE):
        return False
    
    try:
        with open(PID_FILE, 'r') as f:
            pid = int(f.read().strip())
        
        # –ü—Ä–æ–≤–µ—Ä—è–µ–º –ø—Ä–æ—Ü–µ—Å—Å
        result = subprocess.run(
            ['tasklist', '/FI', f'PID eq {pid}'],
            capture_output=True,
            text=True
        )
        return str(pid) in result.stdout
    except:
        return False

def main():
    if is_running():
        print("‚ùå –°–µ—Ä–≤–µ—Ä —É–∂–µ –∑–∞–ø—É—â–µ–Ω!")
        try:
            with open(PID_FILE, 'r') as f:
                pid = f.read().strip()
            print(f"   PID: {pid}")
        except:
            pass
        print("\n–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ:")
        print("  python stop.py     - –¥–ª—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∏")
        print("  python restart.py  - –¥–ª—è –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞")
        return
    
    print("üöÄ –ó–∞–ø—É—Å–∫ mTrade —Å–µ—Ä–≤–µ—Ä–∞...")
    print("=" * 60)
    
    # –ó–∞–ø—É—Å–∫–∞–µ–º —Å–µ—Ä–≤–µ—Ä —Å —è–≤–Ω—ã–º —Ä–∞–±–æ—á–∏–º –∫–∞—Ç–∞–ª–æ–≥–æ–º –∏ –ø–æ–ª–Ω—ã–º –ø—É—Ç–µ–º –∫ —Å–∫—Ä–∏–ø—Ç—É
    script = os.path.abspath(__file__)
    app_dir = os.path.abspath(os.path.dirname(script))
    target = os.path.join(app_dir, 'mTrade.py')
    try:
        subprocess.Popen(
            [sys.executable, target],
            cwd=app_dir,
            creationflags=subprocess.CREATE_NEW_CONSOLE if os.name == 'nt' else 0
        )
    except Exception:
        # fallback –Ω–∞ –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω—ã–π –∑–∞–ø—É—Å–∫
        subprocess.Popen(
            [sys.executable, "mTrade.py"],
            creationflags=subprocess.CREATE_NEW_CONSOLE if os.name == 'nt' else 0
        )
    
    print("‚úÖ –°–µ—Ä–≤–µ—Ä –∑–∞–ø—É—Å–∫–∞–µ—Ç—Å—è –≤ –æ—Ç–¥–µ–ª—å–Ω–æ–º –æ–∫–Ω–µ...")
    print("üåê –ê–¥—Ä–µ—Å: http://localhost:5000")
    print("\n–£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ:")
    print("  python stop.py     - –û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å")
    print("  python restart.py  - –ü–µ—Ä–µ–∑–∞–ø—É—Å—Ç–∏—Ç—å")
    print("  python status.py   - –ü—Ä–æ–≤–µ—Ä–∏—Ç—å —Å—Ç–∞—Ç—É—Å")

if __name__ == '__main__':
    main()
