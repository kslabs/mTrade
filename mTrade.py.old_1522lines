import random  # –¥–æ–±–∞–≤–ª–µ–Ω–æ –¥–ª—è –∞–≤—Ç–æ—Ç—Ä–µ–π–¥–µ—Ä–∞
from datetime import datetime
from flask import Flask, render_template, request, jsonify, session
import requests
from threading import Thread
