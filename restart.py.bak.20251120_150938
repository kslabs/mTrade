#!/usr/bin/env python
# -*- coding: utf-8 -*-
"""
–°–∫—Ä–∏–ø—Ç –¥–ª—è –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞ mTrade —Å–µ—Ä–≤–µ—Ä–∞
"""

import os
import sys
import subprocess
import time

PID_FILE = "mtrade_server.pid"

def stop_server():
    """–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å —Å–µ—Ä–≤–µ—Ä"""
    if not os.path.exists(PID_FILE):
        return True
    
    try:
        with open(PID_FILE, 'r') as f:
            pid = int(f.read().strip())
        
        print(f"üõë –û—Å—Ç–∞–Ω–æ–≤–∫–∞ —Ç–µ–∫—É—â–µ–≥–æ —Å–µ—Ä–≤–µ—Ä–∞ (PID: {pid})...")
        subprocess.run(['taskkill', '/F', '/PID', str(pid)], capture_output=True)
        
        time.sleep(1)
        
        if os.path.exists(PID_FILE):
            os.remove(PID_FILE)
        
        return True
    except Exception as e:
        print(f"‚ö†Ô∏è –û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Å—Ç–∞–Ω–æ–≤–∫–µ: {e}")
        return False

def start_server():
    """–ó–∞–ø—É—Å—Ç–∏—Ç—å —Å–µ—Ä–≤–µ—Ä"""
    print("üöÄ –ó–∞–ø—É—Å–∫ –Ω–æ–≤–æ–≥–æ —ç–∫–∑–µ–º–ø–ª—è—Ä–∞ —Å–µ—Ä–≤–µ—Ä–∞...")
    
    # –ó–∞–ø—É—Å–∫–∞–µ–º —Å–µ—Ä–≤–µ—Ä —Å —è–≤–Ω—ã–º —Ä–∞–±–æ—á–∏–º –∫–∞—Ç–∞–ª–æ–≥–æ–º –∏ –ø–æ–ª–Ω—ã–º –ø—É—Ç–µ–º –∫ —Å–∫—Ä–∏–ø—Ç—É
    script = None
    try:
        script = os.path.abspath(__file__)
    except Exception:
        try:
            script = os.path.abspath(sys.argv[0])
        except Exception:
            script = None

    app_dir = os.path.abspath(os.path.dirname(script)) if script else os.path.abspath('.')
    target = os.path.join(app_dir, 'mTrade.py')
    try:
        subprocess.Popen(
            [sys.executable, target],
            cwd=app_dir,
            creationflags=subprocess.CREATE_NEW_CONSOLE if os.name == 'nt' else 0
        )
    except Exception:
        # fallback: –ø–æ–ø—ã—Ç–∫–∞ –∑–∞–ø—É—Å—Ç–∏—Ç—å –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω—ã–π –ø—É—Ç—å
        try:
            subprocess.Popen([sys.executable, "mTrade.py"], creationflags=subprocess.CREATE_NEW_CONSOLE if os.name == 'nt' else 0)
        except Exception as e:
            print(f"üö´ –û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ —Å–µ—Ä–≤–µ—Ä–∞: {e}")
    
    time.sleep(2)
    
    if os.path.exists(PID_FILE):
        with open(PID_FILE, 'r') as f:
            new_pid = f.read().strip()
        print(f"‚úÖ –°–µ—Ä–≤–µ—Ä —É—Å–ø–µ—à–Ω–æ –ø–µ—Ä–µ–∑–∞–ø—É—â–µ–Ω (–Ω–æ–≤—ã–π PID: {new_pid})")
    else:
        print("‚ö†Ô∏è –°–µ—Ä–≤–µ—Ä –∑–∞–ø—É—â–µ–Ω, –Ω–æ PID –Ω–µ –Ω–∞–π–¥–µ–Ω")

def main():
    print("üîÑ –ü–µ—Ä–µ–∑–∞–ø—É—Å–∫ mTrade —Å–µ—Ä–≤–µ—Ä–∞...")
    print("=" * 60)
    
    # –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º
    stop_server()
    
    # –ñ–¥–µ–º –Ω–µ–º–Ω–æ–≥–æ
    time.sleep(1)
    
    # –ó–∞–ø—É—Å–∫–∞–µ–º
    start_server()
    
    print("\nüåê –ê–¥—Ä–µ—Å: http://localhost:5000")

if __name__ == '__main__':
    main()
